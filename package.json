{
  "name": "@builder.io/micro-agent",
  "description": "An AI CLI that writes code for you.",
  "version": "0.1.5",
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.21.1",
    "@clack/core": "latest",
    "@clack/prompts": "latest",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@dqbd/tiktoken": "^1.0.15",
    "@google/generative-ai": "^0.21.0",
    "@huggingface/inference": "^2.8.0",
    "@types/diff": "^5.2.1",
    "@types/probe-image-size": "^7.2.4",
    "chromadb": "^3.3.0",
    "cleye": "^1.3.2",
    "commander": "^14.0.3",
    "dedent": "^0.7.0",
    "diff": "^5.2.0",
    "dotenv": "^17.3.1",
    "execa": "^9.1.0",
    "glob": "^10.4.1",
    "ini": "^4.1.3",
    "kolorist": "^1.7.0",
    "litellm": "^0.12.0",
    "ollama": "^0.5.1",
    "openai": "^4.47.1",
    "playwright": "^1.44.1",
    "probe-image-size": "^7.2.3",
    "sharp": "^0.33.4",
    "uuid": "^13.0.0",
    "xstate": "^5.28.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BuilderIO/micro-agent"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "micro-agent": "./dist/cli.mjs",
    "ma": "./dist/cli.mjs"
  },
  "scripts": {
    "test": "vitest run --exclude src/tests/integration",
    "test:integration": "vitest run src/tests/integration --exclude src/tests/integration/add.test.ts --poolOptions.threads.singleThread",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "validate:quickstart": "tsx scripts/validate-quickstart.ts",
    "validate:coverage": "tsx scripts/validate-coverage.ts",
    "validate:context": "tsx scripts/validate-context-usage.ts",
    "validate:all": "npm run validate:quickstart && npm run validate:coverage && npm run validate:context",
    "start": "jiti ./src/cli.ts",
    "ralph-loop": "jiti ./src/cli/ralph-loop.ts",
    "lint:fix": "prettier --write . && eslint --fix",
    "lint": "prettier --check . && eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc",
    "build": "pkgroll",
    "build:watch": "pkgroll --watch",
    "release:patch": "npm run build && standard-version --release-as patch git push --follow-tags origin main && npm publish",
    "standard-version:release": "standard-version",
    "standard-version:release:minor": "standard-version --release-as minor",
    "standard-version:release:major": "standard-version --release-as major",
    "standard-version:release:patch": "standard-version --release-as patch",
    "postinstall": "npx playwright install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/ini": "^1.3.31",
    "@types/node": "^18.19.130",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.0",
    "jiti": "^1.21.3",
    "pkgroll": "^1.11.1",
    "prettier": "^3.8.1",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.5",
    "vitest": "^1.6.1"
  }
}
